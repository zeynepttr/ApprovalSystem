<configuration>

  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss} %-5level [GATEWAY] %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <!-- Root log seviyesi -->
  <root level="INFO">
    <appender-ref ref="CONSOLE"/>
  </root>

  <!-- Gateway loglarÄ± DEBUG olsun -->
  <logger name="org.springframework.cloud.gateway" level="DEBUG"/>
  <logger name="com.gateaway.gateaway.filter.LoggingFilter" level="INFO"/>

</configuration>
